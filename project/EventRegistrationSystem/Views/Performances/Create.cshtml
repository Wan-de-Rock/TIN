@model EventRegistrationSystem.Models.Performance

@{
    ViewData["Title"] = "Create";
}

<h2>New Performance</h2>
<hr />

<div class="container">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="QueuePosition" class="control-label"></label>
                <input asp-for="QueuePosition" class="form-control" />
                <span asp-validation-for="QueuePosition" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="TimeOfStart" class="control-label"></label>
                <input asp-for="TimeOfStart" class="form-control" />
                <span asp-validation-for="TimeOfStart" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ArtistId" class="control-label"></label>
                <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.ArtistId"></select>
            </div>
            <div class="mb-4">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" class="form-control" asp-items="ViewBag.EventId"></select>
            </div>

            <div class="row">
                <div class="col">
                    <input type="submit" value="Create" class="btn btn-primary w-100" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger w-100">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
